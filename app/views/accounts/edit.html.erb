<h1>Edit account</h1>

<%= simple_form_for @user, url: account_path do |f| %>
	<%= f.input :subscription_plan, as: :select, 
	collection: [
		['Basic subscription - $9.99/month', 'price_1LUHviCRxYRIr7KKv9b7ovRC'],
		['Pro subscription - $19.99/month', 'price_1LUHxVCRxYRIr7KK6MfD0b2e']
	],
	 include_blank: false %>
	 
	 <%= f.button :submit, "Update account" %>
	 
<% end %>

<p>
	<%= link_to "Delete account",
	 account_path,
	  method: :delete,
	 data: { confirm: "Are you sure you want to delete your account?"} %>
</p>